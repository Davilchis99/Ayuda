#include <stdio.h
#include <stdlib.h>
#include <math.h>
FILE *se;
FILE *co;
FILE *archivo;
float f(float x);
int main()
{
	float x[1000], df[1000];
	float a,b,h;
	int i=0,n=1,j,k;
	
    se=fopen("sin.txt","w");
    co=fopen("cos.txt","w");
    archivo=popen("c:/gnuplot/bin/gnuplot.exe","w");
	printf("a= ");
	scanf("%f",&a);
	printf("b= ");
	scanf("%f",&b);
	printf("h= ");
	scanf("%f",&h);
  
	do
	{
		df[i]=(f(a+h)-f(a))/h;
		a=a+h;
		i=i+1;
	}while(i<n);
    //Para imprimir los puntos
	/*printf("x\tf(x)\tdf(x)\n");
	for(j=0;j<=i;j++)
	{
		printf("0.5f\t%0.5f\t%0.5f\n",a+h*j,f(a+h*j),df[j]);
	}*/
     
    //Para imprimir la grÃ fica
    
    fclose(se);
    fclose(co);
    
	//fprintf(archivo,"plot sin(x)\n, cos(x)\n");
    fprintf(archivo,"plot cos(x)\n");
	fprintf(archivo,"pause 5\n");
    pclose(archivo);
	
return 0;
}
float f(float x)
{
	return sin(x);}
 }
